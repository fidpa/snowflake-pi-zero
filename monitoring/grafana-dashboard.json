{
  "dashboard": {
    "id": null,
    "uid": "snowflake-proxy",
    "title": "Tor Snowflake Proxy",
    "description": "Monitoring Dashboard for Snowflake Proxies on Raspberry Pi Zero",
    "tags": ["snowflake", "tor", "pi-zero", "privacy"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Service Status",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "targets": [
          {
            "expr": "snowflake_service_status",
            "legendFormat": "{{device}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "type": "value", "options": { "0": { "text": "STOPPED", "color": "red" } } },
              { "type": "value", "options": { "1": { "text": "RUNNING", "color": "green" } } }
            ],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "red", "value": null },
                { "color": "green", "value": 1 }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Connected Tor Clients",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "targets": [
          {
            "expr": "snowflake_connected_clients",
            "legendFormat": "{{device}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 20
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": null },
                { "color": "yellow", "value": 4 },
                { "color": "red", "value": 5 }
              ]
            },
            "min": 0,
            "max": 10
          }
        }
      },
      {
        "id": 3,
        "title": "Bytes Proxied Rate",
        "type": "timeseries",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
        "datasource": { "type": "prometheus", "uid": "prometheus" },
        "targets": [
          {
            "expr": "rate(snowflake_bytes_proxied_total[5m])",
            "legendFormat": "{{device}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "Bps",
            "min": 0
          }
        }
      }
    ]
  },
  "overwrite": true
}
